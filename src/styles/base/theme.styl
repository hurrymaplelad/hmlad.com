$img-border = #666;

// Main Link Colors
$link-color ?= darken(#C15A21, 5) 
$link-color-hover ?= desaturate(lighten($link-color, 30), 10) 
$link-color-visited ?= desaturate(lighten($link-color, 15), 60) 
$link-color-active ?= $link-color-visited 

// Main Section Colors
$site-bg = white;
$main-bg ?= transparent 
$page-bg ?= transparent 

$header-bg ?= transparent 
$header-border ?= none 
$title-color ?= #000 
$subtitle-color ?= #000 
$header-color = #111;
$header-link-color = lighten($link-color, 10);

$text-color ?= #333 
$text-color-light ?= #888 
$type-border ?= #ddd 

/* Navigation */
$nav-bg ?= transparent 
$nav-bg-front ?= transparent 
$nav-bg-back ?= transparent 
$nav-color ?= $text-color 
$nav-color-hover ?= $link-color 
$nav-placeholder ?= desaturate(darken($text-color, 10), 15) 
$nav-border ?= lighten($text-color-light, 38) 
$nav-border-top ?= lighten($site-bg, 50) 
$nav-border-bottom ?= $nav-border 
$nav-border-left ?= $nav-border 
$nav-border-right ?= #fff 

$footer-color ?= lighten($text-color-light, 10) 
$footer-color-hover ?= $text-color-light 
$footer-bg ?= transparent 
$footer-bg-front ?= transparent 
$footer-bg-back ?= transparent 
$footer-border-top ?= darken($site-bg, 10) 
$footer-border-bottom ?= none 
$footer-link-color ?= darken($text-color-light, 38) 
$footer-link-color-hover ?= darken($footer-color, 25) 
$page-border-bottom ?= lighten($text-color-light, 38) 

$article-border ?= $footer-border-top 


/* Core theme application */

a
  color: $link-color
  transition(color .3s)
  text-decoration: none
  &:visited
    color: $link-color-visited 
  &:hover
    color: $link-color-hover
  &:focus
    color: $link-color-hover
  &:active
    color: $link-color-active
  &:hover, &:active
    text-decoration: underline

html {
  background: $site-bg;
}
body {
  > div {
    > div {
      background: $main-bg;
    }
  }
}